{% extends 'base.html.twig' %}

{% block body %}
<h1>Editar Producto</h1>
<form method="post">
    {{ form_start(form) }}
    {{ form_row(form.claveProducto) }}
    {{ form_row(form.nombre) }}
    {{ form_row(form.precio) }}
    <button type="submit" class="btn btn-primary">Guardar</button>
    {{ form_end(form) }}
</form>

<a href="{{ path('producto_index') }}" class="btn btn-secondary">Cancelar</a>
{% endblock %}